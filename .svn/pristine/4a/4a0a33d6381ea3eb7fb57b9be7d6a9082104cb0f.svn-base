namespace BSFood.View
{
    public partial class ucPrincipal : UserControl
    {
        PrincipalViewModel objViewModel = new PrincipalViewModel();
        
        public ucPrincipal()
        {
            InitializeComponent();
            this.DataContext = objViewModel;
        }

        private void UserControl_Loaded(object sender, RoutedEventArgs e)
        {
            cwLogin objLogin = new cwLogin();
            objLogin.Closed += (sen, eve) => { objViewModel.PreparaTelaPrincipal(); };
            objLogin.Show();
        }
    }
}
