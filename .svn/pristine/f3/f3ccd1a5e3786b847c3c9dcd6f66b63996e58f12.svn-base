        private void Buscar(object objParam)
        {
            if (objParam != null)
            {
                int intCodigo;
                if (int.TryParse(objParam.ToString(), out intCodigo))
                    this.cli_codigo = intCodigo;
                else
                    Pesquisar("AbrirTela");
            }
